__pycache__/
*.py[cod]
*$py.class
*.so
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg
MANIFEST
.pytest_cache/
.coverage
.coverage.*
htmlcov/
.tox/
.hypothesis/
*.log

# Virtual Environment
venv/
env/
ENV/
env.bak/
venv.bak/
.venv/

# IDEs
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Docker
.dockerignore

# Temporary files
*.tmp
*.temp
*.bak
*.backup

# OS specific
Thumbs.db
.Spotlight-V100
.Trashes

# Local development
.env
.env.local
*.local

# Acme.sh directory (if using acme.sh)
.acme.sh/

