# 全局配置
global:
  # 默认证书有效期检查间隔（小时）
  check_interval: 24

  # 默认续期提前天数
  default_renew_before_days: 30

  # 证书存储根目录
  cert_base_dir: "/data/certs"

  # 日志级别 (DEBUG/INFO/WARN/ERROR)
  log_level: INFO

  # 最大并发任务数
  max_concurrent_tasks: 3

  # 重试次数
  retry_count: 3

  # 重试间隔（秒）
  retry_interval: 30

  # 默认部署方式 (auto/manual)
  # auto: 自动部署到服务器
  # manual: 手动上传到七牛云等CDN
  default_deploy_method: auto
